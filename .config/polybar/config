;; Center ---------------------------------------------------------------------

[module/i3]
type =                          internal/i3
format =                        <label-mode><label-state>
index-sort =                    true
wrapping-scroll =               false
enable-click =                  true
pin-workspaces = 		true

;;label-mode =                    "%mode%"
;;label-mode-padding =            1
;;label-mode-background =         ${colours.mainbg}
;;label-focused =                 "%{T2}%{T-}"
;;label-focused-foreground =      ${colours.mainc}
;;label-focused-background =      ${colours.mainbg}
;;label-focused-padding =         1
;;label-unfocused =               "%{T2}%{T-}"
;;label-unfocused-background =    ${colours.mainbg}
;;label-unfocused-foreground =    ${colours.mainc}
;;label-unfocused-padding =       1
;;label-urgent =                  "%{T2}%{T-}"
;;;; ●
;;label-urgent-foreground =       ${colours.mainc}
;;label-urgent-background =       ${colours.mainbg}
;;label-urgent-padding =          1
;;label-visible =                 %icon%

label-focused = %index%
label-focused-padding = 3
label-focused-font = 3

label-unfocused = %index%
label-unfocused-foreground = ${colours.gray}
label-unfocused-padding = 3
label-unfocused-font = 3

label-visible = %index%
label-visible-padding = 3
label-visible-font = 3

label-urgent = %index%
label-urgent-underline = ${colours.light-red}
label-urgent-padding = 3
label-urgent-font = 3

[module/time]
type =                      internal/date
interval =                  1
time =                      %I:%M
label =                     "%{T-}%time%"
format-foreground =         ${colours.mainc}
format-background =         ${colours.mainbg}

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>
format-padding = 2

format-prefix = "  "
format-prefix-foreground = ${colours.mainc}

label = "%percentage% "
label-font = 3

[module/memory]
type = internal/memory
interval = 3
format = <label>
format-padding = 2

format-prefix =
format-prefix-foreground = ${colours.mainc}
label = " %gb_used%"
label-font = 3

[module/date]
type =                      internal/date
interval =                  600
date =                      %m/%d/%Y
label =                     "%{T-}  %date%   "
format-foreground =         ${colours.mainc}
format-background =         ${colours.mainbg}

[module/i3new]
type =                      custom/text
content-font =		    0
content = 		    ""
click-left = ~/.i3nw/i3nw

[module/spotify]
type = custom/script
interval = 1
exec = python ~/.config/polybar/scripts/spotify_status.py -f '{artist} | {song}'
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
click-middle = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
click-right = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

