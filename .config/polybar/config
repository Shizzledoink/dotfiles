;Date correction
[module/date]
type = internal/date

time = %I:%M %p
date = %a, %b %d
date-alt = %A, %B %d, %Y
time-alt = %H:%M:%S

format-prefix = "   "
format-padding = 2
format-underline = ${colors.menucol-orange}
format-foreground = ${colors.menucol-orange}
interval = 20

label = %date%, %time%
label-font = 2
label-foreground = ${colors.light}


;Workspaces
[module/workspaces]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
index-sort = true

format = <label-state> <label-mode>

label-dimmed-underline = ${colors.background}

;On editing mode (resize for ex)
