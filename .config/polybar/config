;; Var Dec --------------------------------------------------------------------

[fonts]
opensansreg = Kiona:Regular:size=9;2
opensanssemibold = Kiona:Reguar:size=9;2
opensansbold = Kiona:Regular:size=9;2
opensansboldhigh = DroidSans:Bold:size=11
opensansital = DroidSans:Italic:size=9
xos = xos4\ Terminus:size=14;0
;; NERD FONT SIZE MUST MATCH BAR HEIGHT FOR DIVIDERS TO LOOK PROPER
;; MUST ALSO BE A MONOSPACE NERD FONT 
nerd = NotoSansMono Nerd Font:style=Medium:size=14;4
nerd2 = TerminessTTF Nerd Font:size=5;5

[colours]

;; // First two letters control transparency as a Hex //

mainbg = #a903090e
altbg = #081b27
mainc = #FFFFFF
altc = #FFFFFFF
logbg = #0c2b3a
empbg = #2d7982

urg = #D95B5B
gray = #0497ab

yellow = #F7F272
blue = #1771F1
orange = #FFAF60
red = #F85C50
light-red = #F85C50
green = #77BD8B
sealine = #00CF91
purple = #9A76B3
pink = #FF77BF
deepblue = #6560FF
lightblue = #60FFF7

;; Basic Bar Config -----------------------------------------------------------

[bar/main]
monitor = HDMI-0
enable-ipc = true
override-redirect = false

bottom = false
width = 100%
height = 22 ;px

background = ${colours.mainbg}
foreground = ${colours.mainc}

module-margin-left = 0
module-margin-right = 0
padding-left = 0
padding-right = 0


line-color = ${colours.green}
line-size = 2

separator =

;; List of fonts
font-0 = ${fonts.opensansreg}
font-1 = ${fonts.opensanssemibold}
font-2 = ${fonts.opensansbold}
font-3 = ${fonts.opensansital}
font-4 = ${fonts.xos}
font-5 = ${fonts.nerd}
font-6 = ${fonts.opensansboldhigh}
font-7 = ${fonts.nerd2}

wm-restack = i3

;; modules-left = logo logosep lsep2 i3
modules-left = i3 i3new
modules-center = time
;; modules-right = cmus midsep date
modules-right = spotify midsep cpu memory midsep date

;; Modules --------------------------------------------------------------------

;; Seperators -----------------------------------------------------------------

[module/empsep]
type = custom/text
content = "     "
;;content = "%{T5}E"
content-font = 5
content-foreground = ${colours.altbg}
content-background = ${colours.mainbg}

[module/lsep]
type = custom/text
content = "%{T5}"
;;content = "%{T5}E"
content-font = 5
content-foreground = ${colours.altbg}
content-background = ${colours.empbg}

[module/rsep]
type = custom/text
content = "%{T5}       "
;;content = "%{T5}E"
content-font = 5
content-foreground = ${colours.altbg}
content-background = ${colours.mainbg}

[module/lsep2]
type = custom/text
content = "%{T5} "
;;content = "%{T5}E"
content-font = 5
content-foreground = ${colours.empbg}
content-background = ${colours.mainbg}

[module/midsep]
type = custom/text
content = "%{T5}  | "
content-font = 5
content-foreground = ${colours.empbg}
content-background = ${colours.mainbg}


;; Left Side ------------------------------------------------------------------

[module/window]
type = internal/xwindow
format-padding = 4
format-background = ${colours.altbg}
format-foreground = ${colours.altc}
label = %title%
label-maxlen = 15
label-empty = "NAVI"

[module/logo]
type = custom/text
content = "%{T7}   "
;;content = "  EOOOO "
;;content = "%{T7}E"
content-font = 7
content-foreground = ${colours.mainc}
content-background = ${colours.logbg}

